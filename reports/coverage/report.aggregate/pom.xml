			<version>23.7.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>asmeta</groupId>
			<artifactId>asmeta.smv.test</artifactId>
			<version>23.7.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>asmeta</groupId>
			<artifactId>asmeta.flattener.test</artifactId>
			<version>23.7.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>asmeta</groupId>
			<artifactId>asmeta.simulator.test</artifactId>
			<version>23.7.0-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.7.9</version>
				<executions>
					<execution>
						<id>post-unit-test</id>
						<phase>test</phase>
						<goals>
							<goal>report-aggregate</goal>
						</goals>
						<configuration>
							<!-- <dataFile>${jacoco.destFile}</dataFile> -->
							<outputDirectory>${project.basedir}</outputDirectory>
						</configuration> 
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>