scenario scenario2

load pillbox_final.asm

step 

check drawerLed(drawer1) = OFF;
check drawerLed(drawer2) = OFF;
check drawerLed(drawer3) = OFF;

step until drawerLed(drawer1) = ON;

check drawerLed(drawer1) = ON;
check drawerLed(drawer2) = OFF;
check drawerLed(drawer3) = OFF;
