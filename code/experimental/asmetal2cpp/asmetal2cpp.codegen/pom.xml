		</repository>
		<repository>
			<id>eclipse-2024-12</id>
			<url>https://p2repository.com/mvn4/eclipse-2024-12/</url>
		</repository>
		<repository>
			<id>eclipse-2024-09</id>
			<url>https://p2repository.com/mvn4/eclipse-2024-09/</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.13.2</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
