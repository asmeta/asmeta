<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>asmeta.validator</artifactId>
  <version>23.7.0-SNAPSHOT</version>
  <packaging>eclipse-plugin</packaging>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.eclipse.xtend</groupId>
        <artifactId>xtend-maven-plugin</artifactId>
        <version>2.26.0</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
              <goal>testCompile</goal>
              <goal>xtend-install-debug-info</goal>
              <goal>xtend-test-install-debug-info</goal>
            </goals>
            <configuration>
              <xtendAsPrimaryDebugSource>true</xtendAsPrimaryDebugSource>
              <outputDirectory>${basedir}/xtend-gen</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
	<artifactId>maven-compiler-plugin</artifactId>
	<version>3.11.0</version>
	<configuration>
	  <source>1.8</source>
	  <target>1.8</target>
	  <includes>
            <include>src/**/*.java</include>
            <include>src-gen/**/*.java</include>
            <include>xtend-gen/**/*.java</include>
	  </includes>
	</configuration>
      </plugin>

      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-assembly-plugin</artifactId>
	<executions>
	  <execution>
	    <phase>package</phase>
	    <goals>
	      <goal>single</goal>
	    </goals>
	    <configuration>
	      <finalName>AsmetaV</finalName>
	      <appendAssemblyId>false</appendAssemblyId>
	      <outputDirectory>dist</outputDirectory>
	      <archive>
		<manifest>
		  <mainClass>
		    org.asmeta.validator.main.AsmetaV_cli
		  </mainClass>
		</manifest>
	      </archive>
	      <descriptorRefs>
		<descriptorRef>jar-with-dependencies</descriptorRef>
	      </descriptorRefs>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>copy-libraries</id>
            <phase>validate</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
		<item>
		  <groupId>args4j</groupId>
		  <artifactId>args4j</artifactId>
		  <version>2.33</version>
		</item>
		<item>
		  <groupId>asmeta</groupId>
		  <artifactId>asmeta.cli</artifactId>
		  <version>0.0.1-SNAPSHOT</version>
		</item>
              </artifactItems>
              <outputDirectory>lib</outputDirectory>
              <stripVersion>true</stripVersion>
              <overWriteReleases>true</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
      </plugins>
  </build>
  <parent>
    <groupId>asmeta</groupId>
    <artifactId>asmeta.all</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../../../..</relativePath>
  </parent>
</project>
