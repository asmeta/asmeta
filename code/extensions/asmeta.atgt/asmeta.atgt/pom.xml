<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>asmeta.atgt</artifactId>
  <repositories>
	<repository>
	  <id>atgt-local</id>
	  <name>Local ATGT JAR Repository</name>
	  <url>file://${project.basedir}/local-repo</url>
	</repository>
  </repositories>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  	<dependency>
	  <groupId>org.eclipse.xtext</groupId>
	  <artifactId>org.eclipse.xtext.testing</artifactId>
	  <version>${xtext.version}</version>
	</dependency>
    <dependency>
	  <groupId>asmeta</groupId>
	  <artifactId>atgt4asmeta</artifactId>
	  <version>0.0.1-SNAPSHOT</version>
	</dependency>
	<dependency>
	  <groupId>asmeta</groupId>
	  <artifactId>asmeta.simulator</artifactId>
	  <version>0.0.1-SNAPSHOT</version>
	</dependency>
	<dependency>
	  <groupId>asmeta</groupId>
	  <artifactId>asmeta.smv</artifactId>
	  <version>0.0.1-SNAPSHOT</version>
	</dependency>
	<dependency>
		<groupId>asmeta</groupId>
	  	<artifactId>org.asmeta.avallaxt</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</dependency>
	<dependency>
		<groupId>asmeta</groupId>
	  	<artifactId>asmeta.validator</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</dependency>
  </dependencies>
  <parent>
	<groupId>asmeta</groupId>
	<artifactId>asmeta.all</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<relativePath>../../../pom.xml</relativePath>
  </parent>
</project>
