    <module>
      code/extensions/asmeta.validator/org.asmeta.avallaxt.tests
    </module>
    <module>
      code/extensions/asmeta.validator/org.asmeta.avallaxt.ui
    </module>
    <module>
      code/extensions/asmeta.validator/org.asmeta.avallaxt.ui.tests
    </module>
    <module>
      code/extensions/asmeta.atgt/asmeta.atgt
    </module>
