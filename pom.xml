<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>asmeta</groupId>
	<artifactId>asmeta.all</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<jacoco.destFile>${project.basedir}/reports/coverage/jacoco/jacoco.exec</jacoco.destFile>
	</properties>
	<modules>
		<module>code/core</module>
		<module>code/extensions/asmeta.flattener/asmeta.flattener</module>
		<module>code/extensions/asmetasmv/asmeta.smv</module>
		<module>code/extensions/asmeta.flattener/asmeta.flattener.test</module> 
		<module>code/extensions/asmetasmv/asmeta.smv.test</module>
		<module>reports/coverage/report.aggregate</module>
		<module>
			code/extensions/asmeta.flattener/asmeta.flattener.cli
		</module>
		<module>
			code/extensions/asmeta.modeladvisor/asmeta.modeladvisor
		</module>
		<module>
			code/extensions/asmeta.modeladvisor/asmeta.modeladvisor.test
		</module>
		<module>
			code/extensions/asmeta.refprover/refinementProof
		</module>
		<module>
			code/extensions/asmeta.refprover/translatorToSMT
		</module>
		<module>
			code/extensions/asmeta.validator/asmeta.validator
		</module>
		<module>
			code/extensions/asmeta.visualizer/asmeta.visualizer
		</module>
		<module>
			code/experimental/asmetal2cpp/asmetal2cpp_codegen
		</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.7.9</version>
				<executions>					<execution>
						<id>pre-unit-test</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
						<configuration>
							<append>true</append>
							<destFile>${jacoco.destFile}</destFile>
							<!-- <propertyName>surefireArgLine</propertyName> -->
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.13.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.formdev</groupId>
			<artifactId>flatlaf</artifactId>
			<version>3.1.1</version>
		</dependency>
	</dependencies>
</project>