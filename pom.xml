    <module>code/extensions/asmeta.flattener/asmeta.flattener</module>
    <module>code/extensions/asmetasmv/asmeta.smv</module>
    <module>code/extensions/asmetasmv/asmeta.smv.feature</module>
    <module>code/extensions/asmetasmv/asmeta.smv.ui</module>
    <module>code/extensions/asmeta.flattener/asmeta.flattener.test</module> 
    <module>code/extensions/asmetasmv/asmeta.smv.test</module>
    <module>reports/coverage/report.aggregate</module>
    <module>
      code/extensions/asmeta.flattener/asmeta.flattener.cli
    </module>
    <module>
      code/extensions/asmeta.flattener/asmeta.flattener.ui
    </module>
    <module>
      code/extensions/asmeta.modeladvisor/asmeta.modeladvisor
    </module>
    <module>
      code/extensions/asmeta.modeladvisor/asmeta.modeladvisor.feature
    </module>
    <module>
      code/extensions/asmeta.modeladvisor/asmeta.modeladvisor.test
    </module>
    <module>
      code/extensions/asmeta.modeladvisor/asmeta.modeladvisor.ui
    </module>
    <module>
      code/extensions/asmeta.refprover/refinementProof
    </module>
    <module>
      code/extensions/asmeta.refprover/translatorToSMT
    </module>
    <module>
      code/extensions/asmeta.animator/asmeta.animator
    </module>
    <module>
      code/extensions/asmeta.animator/asmeta.animator.feature
    </module>
    <module>
      code/extensions/asmeta.animator/asmeta.animator.test
    </module>
    <module>
      code/extensions/asmeta.animator/asmeta.animator.ui
    </module>
    <module>
      code/extensions/asmeta.validator/asmeta.validator
    </module>
    <module>
      code/extensions/asmeta.validator/asmeta.validator.feature
    </module>
    <module>
      code/extensions/asmeta.validator/asmeta.validator.test
    </module>
    <module>
      code/extensions/asmeta.validator/asmeta.validator.ui
    </module>
    <module>
      code/extensions/asmeta.visualizer/asmeta.visualizer
    </module>
    <module>
      code/extensions/asmeta.visualizer/asmeta.visualizer.feature
    </module>
    <module>
      code/extensions/asmeta.visualizer/asmeta.visualizer.plugin
    </module>
    <module>
      code/extensions/asmeta.visualizer/asmeta.visualizer.test
